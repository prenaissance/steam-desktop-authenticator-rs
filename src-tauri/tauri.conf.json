{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "steam-desktop-authenticator-rs",
  "version": "0.1.0",
  "identifier": "com.prenaissance.steam-desktop-authenticator-rs",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "shell": {
      "allow": [
        {
          "name": "open"
        }
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Steam Desktop Authenticator",
        "width": 600,
        "height": 780,
        "minWidth": 600,
        "minHeight": 780,
        "decorations": false,
        "transparent": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
